@model ExampleAdminPasswordResetRequestedByUserMailTemplate
@inject ICofoundryMailTemplateHelper Cofoundry

@{
    // A custom layout file can be set here 
    Layout = "~/Cofoundry/Admin/MailTemplates/Layouts/_ExampleAdminMailLayout_html.cshtml";
}

<h2>Hello @Model.FirstName,</h2>

<p>
    We have received a request to reset the password for your account on
    the example mail template site. To do this click the following link:
</p>

<p>
    <a href="@Cofoundry.Routing.ToAbsolute(Model.ResetUrl)">Reset Password</a>
</p>