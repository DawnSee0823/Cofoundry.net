@inherits Cofoundry.Web.CofoundryPage<Cofoundry.Domain.PasswordResetRequestAuthenticationResult>
@using System.Web.Mvc.Html
@using Cofoundry.Web.Admin
@using System.Web.Mvc

@{
    ViewBag.Title = "Password Change Complete";
    Layout = AuthRouteLibrary.LoginLayoutPath;
}

<h1>Password Change Complete</h1>

<div class="wrap">
    <form method="post" class="form-horizontal">
        <fieldset>
            <p>
                Your password has been changed
            </p>
            <div class="actions">
                <p>
                    <a href="@AuthRouteLibrary.Urls.ForgotPassword()">Click here to login</a>
                </p>
            </div>
        </fieldset>
    </form>
</div>

<footer class="login-footer"></footer>