@model Cofoundry.Web.Identity.LoginViewModel
@inject IStaticResourceReferenceRenderer staticResourceReferenceRenderer
@inject IAdminRouteLibrary adminRouteLibrary

@{
    ViewBag.Title = "Login";
    Layout = adminRouteLibrary.Auth.LoginLayoutPath;
}

@section FooterScripts
{
@staticResourceReferenceRenderer.ScriptTag(adminRouteLibrary.Auth, "Login")
}

<h1>Cofoundry</h1>

<div class="wrap">
    <form method="post" class="form-horizontal">

        <input name="ReturnUrl" id="ReturnUrl" type="hidden" value="@Context.Request.Query["ReturnUrl"]" />

        <fieldset>
            <div class="control-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <div class="controls">
                    <input type="email" asp-for="EmailAddress" maxlength="150" />
                    <span asp-validation-for="EmailAddress" class="help-block"></span>
                </div>
            </div>

            <div class="control-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="controls">
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password" class="help-block"></span>
                </div>
            </div>

            <label class="checkbox" for="RememberMe">
                <input asp-for="RememberMe" class="check" /> Remember me
            </label>

            <div class="actions">
                <input type="submit" class="btn main-cta btn-primary" value="Login" />
            </div>
        </fieldset>
    </form>
</div>

<footer class="login-footer">
    <p class="login-footer-links">
        <a id="forgotPasswordLink" href="@adminRouteLibrary.Auth.ForgotPassword()">Forgotten your password?</a>
        <br />
        <a href="/">&lt; Back to @await Cofoundry.Settings.GetApplicationNameAsync()</a>
    </p>
</footer>