@model GenericPasswordResetByAdminMailTemplate
@inject ICofoundryMailTemplateHelper Cofoundry

@{
    Layout = GenericMailTemplatePath.LayoutPath_Html;
}

<h2>Hello,</h2>

<p>
    The @Model.ApplicationName site administrator has reset your password.
</p>
<p>
    Your username is: @Model.Username
    Your temporary password is: @Model.TemporaryPassword
</p>
<p>
    Login <a href="@Cofoundry.Routing.ToAbsolute(Model.LoginPath)">here</a>
</p>

<p>
    This message was automatically generated by the @Model.ApplicationName site.
</p>