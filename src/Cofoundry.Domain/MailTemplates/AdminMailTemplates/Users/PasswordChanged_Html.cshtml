@inherits EmailTemplateBase<IPasswordChangedTemplate>
@using Cofoundry.Domain.MailTemplates
@using Cofoundry.Core.Mail

@{
    Layout = TemplatePath.DefaultLayoutPath_Html;
}

<h2>Hi @Model.FirstName</h2>

<p>
    Your password has been changed. If this was not you, please contact the site administrator.
    Login <a href="@Url.ToAbsolute(UrlLibrary.Login)">here</a>
</p>

<p>
    Thanks,<br />
    Cofoundry
</p>