@model IPasswordChangedTemplate
@inject ICofoundryMailTemplatePageHelper Cofoundry

@{
    Layout = TemplatePath.DefaultLayoutPath_Html;
}

<h2>Hi @Model.FirstName</h2>

<p>
    Your password has been changed. If this was not you, please contact the site administrator.
    Login <a href="@Cofoundry.Routing.ToAbsolute(UrlLibrary.Login)">here</a>
</p>

<p>
    Thanks,<br />
    Cofoundry
</p>