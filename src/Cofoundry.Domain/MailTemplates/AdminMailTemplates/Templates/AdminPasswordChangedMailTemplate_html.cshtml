@model AdminPasswordChangedMailTemplate
@inject ICofoundryMailTemplateHelper Cofoundry

@{
    Layout = AdminMailTemplatePath.LayoutPath_Html;
}

<h2>Hello,</h2>

<p>
    Your password for the @Model.ApplicationName content
    management system been changed. If this was not you, please contact the
    site administrator.

    The username registered for this account is @Model.Username

    Login <a href="@Cofoundry.Routing.ToAbsolute(Model.LoginPath)">here</a>
</p>

<p>
    This message was automatically generated by the @Model.ApplicationName site.
</p>