@model PasswordResetByAdminMailTemplate
@inject ICofoundryMailTemplateHelper Cofoundry

@{
    Layout = PartnerMailTemplatePath.HtmlTemplateLayoutPath;
}

<h2>Hello,</h2>

<p>
    The UserAreas sample site administrator has reset your password.
</p>
<p>
    Your username is: @Model.Username
    Your temporary password is: @Model.TemporaryPassword
</p>
<p>
    Login <a href="@Cofoundry.Routing.ToAbsolute(Model.LoginPath)">here</a>
</p>

<p>
    This message was automatically generated by the UserAreas sample site.
</p>