@model PasswordResetRequestedByUserMailTemplate
@using Cofoundry.Domain.MailTemplates.GenericMailTemplates
@inject ICofoundryMailTemplateHelper Cofoundry

@{
    Layout = GenericMailTemplatePath.LayoutPath_Html;
}

<h2>Hello customer!</h2>

<p>
    We have received a request to reset the password for your customer account on
    the UserAreas sample site. To do this click the following link:
</p>

<p>
    <a href="@Cofoundry.Routing.ToAbsolute(Model.ResetUrl)">Reset Password</a>
</p>

<p>
    This message was automatically generated.
</p>