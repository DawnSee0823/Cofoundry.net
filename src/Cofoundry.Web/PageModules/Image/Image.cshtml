@inherits CofoundryPageModule<ImageDisplayModel>
@using Cofoundry.Web
@using System.Web.Mvc
@using System.Web.Mvc.Html

@{
    Cofoundry.Module.UseDescription("Displays a single image asset");
    Layout = null;
}

@if (string.IsNullOrEmpty(Model.LinkPath))
{
    <img src="@Model.Source" alt="@Model.AltText" />
}
else
{
    <a href="@Model.LinkPath" target="@Model.LinkTarget">
        <img src="@Model.Source" alt="@Model.AltText" />
    </a>
}